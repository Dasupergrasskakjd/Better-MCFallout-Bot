{
  "name": "better-mcfallout-bot",
  "version": "1.0.0",
  "description": "Minecraft Fallout server bot with user interface.",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "repository": "https://github.com/SiongSng/Better-MCFallout-Bot",
  "author": "SiongSng",
  "license": "GPL-3.0",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "concurrently \"tsc -w\" \"tsc-alias -w\"",
    "start": "yarn build && node dist/index.js",
    "lint": "eslint src/**/*.ts --fix",
    "pkg": "yarn build && pkg .",
    "pkg:linux": "yarn build && pkg -t linux .",
    "pkg:windows": "yarn build && pkg -t windows .",
    "pkg:macos": "yarn build && pkg -t macos ."
  },
  "devDependencies": {
    "@types/node": "^18.6.2",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "pkg": "^5.8.0",
    "tsc-alias": "^1.7.0",
    "typescript": "^4.7.4"
  },
  "pkg": {
    "outputPath": "out"
  },
  "dependencies": {
    "mineflayer": "^4.3.0"
  }
}
