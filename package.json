{
  "name": "better-mcfallout-bot",
  "version": "1.0.0",
  "description": "Minecraft Fallout server bot with user interface.",
  "main": "dist/main.js",
  "repository": "https://github.com/SiongSng/Better-MCFallout-Bot.git",
  "author": "SiongSng <rrt467778@gmail.com>",
  "license": "GPL-3.0",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "electron": "19.0.10",
    "eslint": "^8.20.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "exe": "Better MCFallout Bot"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "platforms": [
              "linux"
            ]
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "platforms": [
              "linux"
            ]
          }
        }
      ]
    }
  }
}
